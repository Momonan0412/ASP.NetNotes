@model IEnumerable<Category>
@*@model IEnumerable<Category> defines the type of data the view expects, which is a collection of Category objects.*@
@{
    ViewData["Title"] = "Index";
}
@*
<partial name="_Notification"></partial>
BETTER TO PUT IT @ _layout.cshtml!
*@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />
    <br />
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                MyProperty
            </th>
            <th>
                Date Time
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    @obj.MyProperty
                </td>
                <td>
                    @obj.CreatedDateTime
                </td>
                <td>
                    <div class="w-100 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1"> <i class="bi bi-pencil-square"></i> Edit</a>
                            &nbsp;
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-1"> <i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>